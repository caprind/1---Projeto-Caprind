Set TBGravar = CreateObject("adodb.recordset")
TBGravar.Open "Select * from CadMaquinas_acessorios_descricoes where id = " & txtId, Conexao, adOpenKeyset, adLockOptimistic
If TBGravar.EOF = True Then TBGravar.AddNew
