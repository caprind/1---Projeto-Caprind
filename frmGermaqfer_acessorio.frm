    Evento = "Alterar"
    If CodigoLista <> 0 And Lista.ListItems.Count <> 0 Then
        Lista.SelectedItem = Lista.ListItems(CodigoLista)
        Lista.SetFocus
    End If
End If
'==================================
Modulo = "PCP/Postos de trabalho/Acessórios"
ID_documento = txtId
Documento = "Descricao: " & Txt_descricao
Documento1 = ""
ProcGravaEvento
'==================================
