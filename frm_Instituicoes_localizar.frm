    Exit Sub
End Sub

Private Sub ProcFiltrar()
On Error GoTo tratar_erro

With frm_Instituicoes
    FiltroBloq = ""
    If cmbStatus = "Liberada" Then
        FiltroBloq = " and I.Bloqueado = 0"
    ElseIf cmbStatus = "Bloqueada" Then
            FiltroBloq = " and I.Bloqueado = 1"
    End If
    CamposFiltro = "I.ID, I.ID_empresa, E.Empresa, I.int_NBanco, I.txt_Agencia, I.txt_conta, I.Txt_descricao, I.DtValidacao"
    INNERJOINTEXTO = "Select " & CamposFiltro & " from tbl_Instituicoes I INNER JOIN Empresa E ON E.Codigo = I.ID_empresa"
    TextoFiltroPadrao = "I.ID_empresa = " & Cmb_empresa.ItemData(Cmb_empresa.ListIndex) & FiltroBloq & " order by I.txt_Descricao"
    
    If txtTexto.Visible = True And txtTexto <> "" Or cmbTexto.Visible = True And cmbTexto <> "" Then
        If cmbfiltrarpor = "Família" Then
            .StrSql_Instituicoes_Localizar = INNERJOINTEXTO & " where I.txt_familia = '" & cmbTexto & "' and " & TextoFiltroPadrao
        Else
            Select Case cmbfiltrarpor
                Case "Agência": TextoFiltro = "I.txt_Agencia"
                Case "Conta": TextoFiltro = "I.txt_Conta"
                Case "Descrição": TextoFiltro = "I.txt_Descricao"
                Case "Nº Banco": TextoFiltro = "I.int_NBanco"
                Case "Nome da agência": TextoFiltro = "I.Nome_agencia"
            End Select
            .StrSql_Instituicoes_Localizar = INNERJOINTEXTO & " where " & TextoFiltro & FunVerifTipoFiltroIMF(Optinicio, Optmeio, Optfim, optIgual, txtTexto) & " and " & TextoFiltroPadrao
        End If
    Else
        .StrSql_Instituicoes_Localizar = INNERJOINTEXTO & " where " & TextoFiltroPadrao
    End If
    'Debug.print .StrSql_Instituicoes_Localizar
    .ProcCarregaLista
End With
Unload Me

Exit Sub
tratar_erro:
    USMsgBox ("Descrição do erro : " + Error()), vbCritical, "CAPRIND v5.0"
    Exit Sub
End Sub

