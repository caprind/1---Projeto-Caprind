Private Sub ProcExcluir()
On Error GoTo tratar_erro

Permitido = False
With Lista
    For InitFor = 1 To .ListItems.Count
        If .ListItems.Item(InitFor).Checked = True Then
            If Permitido = False Then
                If USMsgBox("Deseja realmente excluir este(s) grupo(s)?", vbYesNo, "CAPRIND v5.0") = vbYes Then GoTo 1 Else Exit Sub
            End If
1:
            Permitido = True
            Set TBFI = CreateObject("adodb.recordset")
            TBFI.Open "Select * from projfamilia_Grupo WHERE ID = " & .ListItems(InitFor), Conexao, adOpenKeyset, adLockOptimistic
            If TBFI.EOF = False Then
                '==================================
                Modulo = Formulario & "/Grupo"
                Evento = "Excluir"
                ID_documento = .ListItems(InitFor)
                Documento = "Grupo: " & TBFI!Grupo
                Documento1 = ""
                ProcGravaEvento
                '==================================
                Conexao.Execute "DELETE from projfamilia_Grupo where Id = " & .ListItems(InitFor)
            End If
            TBFI.Close
        End If
    Next InitFor
End With
If Permitido = False Then
    USMsgBox ("Informe o(s) grupo(s) antes de excluir."), vbExclamation, "CAPRIND v5.0"
Else
    USMsgBox ("Grupo(s) excluído(s) com sucesso."), vbInformation, "CAPRIND v5.0"
    ProcLimpaCampos
    Frame2.Enabled = False
    Novo_Grupo_familia = False
    ProcCarregaLista
End If

Exit Sub
tratar_erro:
    USMsgBox ("Descrição do erro : " + Error()), vbCritical, "CAPRIND v5.0"
    Exit Sub
End Sub

Private Sub ProcSalvar()
On Error GoTo tratar_erro

If Frame2.Enabled = False Then
    ProcVerificaSalvar
    cmdNovo.SetFocus
    Exit Sub
End If
If Txt_grupo.Text = "" Then
    USMsgBox ("Informe o grupo antes de salvar."), vbExclamation, "CAPRIND v5.0"
    Txt_grupo.SetFocus
    Exit Sub
End If
Set TBGravar = CreateObject("adodb.recordset")
TBGravar.Open "Select * from projfamilia_Grupo where ID = " & Txt_ID, Conexao, adOpenKeyset, adLockOptimistic
If TBGravar.EOF = False Then
    Conexao.Execute "Update projFamilia Set Grupo = '" & Txt_grupo & "' where Grupo = '" & TBGravar!Grupo & "'"
Else
    TBGravar.AddNew
End If
TBGravar!Grupo = Txt_grupo
TBGravar.Update
Txt_ID = TBGravar!ID
TBGravar.Close
ProcCarregaLista
If Novo_Grupo_familia = True Then
    USMsgBox ("Novo grupo cadastrado com sucesso."), vbInformation, "CAPRIND v5.0"
    Evento = "Novo"
Else
    USMsgBox ("Alteração efetuada com sucesso."), vbInformation, "CAPRIND v5.0"
    Evento = "Alterar"
    If CodigoLista <> 0 And Lista.ListItems.Count <> 0 Then
        Lista.SelectedItem = Lista.ListItems(CodigoLista)
        Lista.SetFocus
    End If
End If
'==================================
Modulo = Formulario & "/Grupo"
ID_documento = Txt_ID
Documento = "Grupo: " & Txt_grupo
Documento1 = ""
ProcGravaEvento
'==================================
Novo_Grupo_familia = False

Exit Sub
tratar_erro:
    USMsgBox ("Descrição do erro : " + Error()), vbCritical, "CAPRIND v5.0"
    Exit Sub
End Sub

